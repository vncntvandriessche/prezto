###############
## Functions ##
###############

function perform_request {

  local domain_name=$1;
  local target=$2;
  local port=$3;

  [ "$domain_name" = "" ] && { echo 'Please supply at least a domain name'; return 1 };

  : ${target:="$domain_name"};
  : ${port:=80};

  echo "GET / HTTP/1.1\nHost: $domain_name\n\n" | nc $target $port
}
